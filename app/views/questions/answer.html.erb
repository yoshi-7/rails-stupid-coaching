<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>Your Question</h4>
        </div>
        <div class="card-body">
          <p class="card-text"><%= @question %></p>
        </div>
        <div class="card-footer">
          <h4>Coach's Answer</h4>
          <p class="card-text"><%= @answer %></p>
          <%= link_to 'Ask another question', ask_path, class: "btn btn-warning mt-1" %>
        </div>
      </div>
    </div>
  </div>
</div>
